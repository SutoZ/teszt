<Window x:Class="teszt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:teszt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="295*"/>
            <ColumnDefinition Width="497*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="asd" HorizontalAlignment="Left" Height="100" Margin="48,44,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="RedCar" Content="Get Car" HorizontalAlignment="Left" Margin="330,227,0,0" VerticalAlignment="Top" Width="117" Click="GetCar_Click" Grid.Column="1"/>
        <RadioButton x:Name="red_color" Content="Red color" HorizontalAlignment="Left" Margin="351,73,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Grid.Column="1"/>
        <RadioButton x:Name="yellow_color" Checked="yellow_color_Checked" Content="Yellow color" HorizontalAlignment="Left" Margin="351,113,0,0" VerticalAlignment="Top" Grid.Column="1"/>

    </Grid>
</Window>
